{
  "name": "jobswipe",
  "version": "1.0.0",
  "private": true,
  "description": "Enterprise job application automation platform with AI-powered browser automation",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "pnpm --filter=@jobswipe/web dev",
    "dev:desktop": "pnpm --filter=@jobswipe/desktop dev",
    "dev:api": "pnpm --filter=@jobswipe/api dev",
    "build": "turbo run build",
    "build:web": "pnpm --filter=@jobswipe/web build",
    "build:desktop": "pnpm --filter=@jobswipe/desktop build",
    "build:api": "pnpm --filter=@jobswipe/api build",
    "start": "turbo run start",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "test:integration": "turbo run test:integration",
    "test:automation": "npx tsx apps/desktop/src/test-basic-automation.ts",
    "test:strategy": "npx tsx apps/desktop/src/test-strategy-registry.ts",
    "test:captcha": "npx tsx apps/desktop/src/test-captcha.ts",
    "test:form": "npx tsx apps/desktop/src/test-form-analyzer.ts",
    "test:queue": "npx tsx apps/desktop/src/test-queue.ts",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "db:generate": "npm run db:generate --workspace=packages/database",
    "db:push": "npm run db:push --workspace=packages/database",
    "db:migrate": "npm run db:migrate --workspace=packages/database",
    "db:studio": "npm run db:studio --workspace=packages/database",
    "db:seed": "npm run db:seed --workspace=packages/database",
    "seed:jobs": "npx tsx scripts/seed-jobs.ts",
    "db:reset": "npm run db:reset --workspace=packages/database",
    "setup": "npm install && npm run db:migrate",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "security:audit": "npm audit --audit-level moderate",
    "security:scan": "turbo run security:scan",
    "precommit": "lint-staged",
"prepare": "node -e \"try{require('child_process').spawnSync('husky',['install'],{stdio:'inherit'})}catch(e){}\"",
    "release": "turbo run build && npm run test"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^2.1.1",
   
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "turbo": "^1.12.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "fastify": "^5.4.0",
    "zod": "^3.22.4", 
    "next": "^15.0.0", 
    "husky": "^8.0.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/jobswipe.git"
  },
  "keywords": [
    "job-application",
    "automation",
    "ai",
    "browser-automation",
    "enterprise",
    "nextjs",
    "electron",
    "typescript",
    "postgresql",
    "prisma"
  ],
  "author": "Abransh Baliyan",
  "license": "UNLICENSED",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "volta": {
    "node": "20.11.0",
    "npm": "10.3.0"
  },
  "packageManager": "pnpm@9.0.0"
}