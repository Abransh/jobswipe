{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/apps/*": ["./apps/*"],
      "@/packages/*": ["./packages/*"],
      "@/shared/*": ["./packages/shared/src/*"],
      "@/database/*": ["./packages/database/src/*"],
      "@jobswipe/database": ["./packages/database/src"],
      "@/ui/*": ["./packages/ui/src/*"]
    }
  },
  "include": [
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "build"
  ],
  "references": [
    { "path": "./apps/web" },
    { "path": "./apps/desktop" },
    { "path": "./packages/shared" },
    { "path": "./packages/database" }
  ]
}