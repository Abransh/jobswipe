{
  "name": "@jobswipe/desktop",
  "version": "1.0.0",
  "description": "JobSwipe desktop application built with Electron",
  "main": "dist/main.js",
  "private": true,
  "scripts": {
    "dev": "npm run build:main:simple && ./node_modules/.bin/electron .",
    "dev:complex": "npm run build:main:dev && ./node_modules/.bin/electron .",
    "dev:full": "electron-builder install-app-deps && npm run build:dev && electron .",
    "dev:jobswipe": "npm run build:jobswipe && ./node_modules/.bin/electron .",
    "dev:jobswipe:simple": "npm run build:jobswipe:simple && ./node_modules/.bin/electron dist/main-simple.js",
    "build": "npm run build:main && npm run build:renderer",
    "build:dev": "npm run build:main:dev && npm run build:renderer:dev",
    "build:jobswipe": "npm run build:jobswipe:main && npm run build:jobswipe:renderer",
    "build:jobswipe:main": "tsc src/main-jobswipe.ts --outDir dist --target es2020 --module commonjs --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports --strict --skipLibCheck --resolveJsonModule",
    "build:jobswipe:simple": "tsc src/main-simple.ts src/main/ipcHandlers-simple.ts src/preload/preload.ts --outDir dist --target es2020 --module commonjs --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports --strict --skipLibCheck --resolveJsonModule",
    "build:jobswipe:renderer": "echo 'Renderer will be built separately'",
    "build:main": "tsc -p tsconfig.main.json",
    "build:main:dev": "tsc -p tsconfig.main.json --sourceMap",
    "build:main:simple": "tsc -p tsconfig.main-simple.json --sourceMap",
    "build:renderer": "cd renderer && next build && next export",
    "build:renderer:dev": "cd renderer && next dev",
    "package": "npm run build && electron-builder --publish=never",
    "package:all": "npm run build && electron-builder -mwl --publish=never",
    "package:mac": "npm run build && electron-builder --mac --publish=never",
    "package:win": "npm run build && electron-builder --win --publish=never",
    "package:linux": "npm run build && electron-builder --linux --publish=never",
    "dist": "npm run build && electron-builder --publish=always",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test:integration": "npm run build:main:dev && node dist/test-integration.js",
    "test:simple": "npx tsx src/test-simple.ts",
    "test:health": "npx tsx src/test-simple.ts",
    "test:automation": "npm run build:main:dev && ./node_modules/.bin/electron dist/test-basic-automation.js",
    "test:automation:direct": "npx tsx src/test-simple.ts && echo 'âœ… Core test passed - electron-store works in Electron context'",
    "test:anthropic": "npx tsx test-anthropic-application.ts",
    "demo:system": "npx tsx test-system-demo.ts",
    "demo:headful": "npx tsx test-headful-demo.ts",
    "demo:production": "npx tsx production-demo.ts",
    "demo:node": "npx tsx node-production-demo.ts",
    "demo:simple": "npx tsx simple-production-demo.ts",
    "demo:gemini": "npx tsx gemini-production-demo.ts",
    "test:jobswipe": "npx tsx test-jobswipe-integration.ts",
    "clean": "rm -rf dist out node_modules"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "@aws-sdk/client-textract": "^3.864.0",
    "@azure/ai-form-recognizer": "^5.1.0",
    "@google-cloud/documentai": "^9.3.0",
    "@google-cloud/vision": "^5.3.3",
    "@google/generative-ai": "^0.24.1",
    "@hookform/resolvers": "^3.10.0",
    "@jobswipe/shared": "workspace:*",
    "axios": "^1.6.2",
    "browser-use": "^0.0.1",
    "bullmq": "^5.57.0",
    "dotenv": "^17.2.1",
    "electron-is-dev": "^2.0.0",
    "electron-next": "^3.1.5",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.4",
    "electron-window-state": "^5.0.3",
    "ioredis": "^5.7.0",
    "keytar": "^7.9.0",
    "lru": "^3.1.0",
    "lru-cache": "^11.1.0",
    "next": "^15.4.1",
    "openai": "^5.12.2",
    "playwright": "^1.54.2",
    "prebuild-install": "^7.1.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io-client": "^4.7.4",
    "tesseract.js": "^6.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "electron": "^37.3.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.54.0",
    "tsx": "^4.20.4",
    "typescript": "^5.3.0"
  },
  "build": {
    "appId": "com.jobswipe.desktop",
    "productName": "JobSwipe",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "renderer/out/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "your-org",
      "repo": "jobswipe"
    }
  },
  "keywords": [
    "electron",
    "desktop",
    "job-automation",
    "productivity"
  ]
}