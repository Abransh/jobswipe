# Database Connection
DATABASE_URL="postgresql://user:password@localhost:5432/jobswipe?schema=public"

# AI Enrichment (Optional - for extracting salary, visa, benefits from descriptions)
# Choose your LLM provider: "gemini" (default) or "claude"
LLM_PROVIDER="gemini"

# For Gemini (recommended - faster and cheaper)
# Get your API key from: https://aistudio.google.com/apikey
GOOGLE_API_KEY="your-google-api-key"

# For Claude (alternative)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY="sk-ant-..."

# Optional: Scraper Configuration
SCRAPER_RATE_LIMIT_RPM=30
SCRAPER_DELAY_BETWEEN_REQUESTS=1000
SCRAPER_DELAY_BETWEEN_COMPANIES=5000
ENABLE_JOB_ENRICHMENT=false  # Set to true to enable LLM-based description parsing

# Optional: Logging
LOG_LEVEL=info
