# JobSwipe Web Application - Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# CRITICAL: JWT Authentication (REQUIRED)
# =============================================================================
# This MUST match the JWT_SECRET used in the API server
# Generate a secure random string: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
NEXT_PUBLIC_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# =============================================================================
# API Configuration
# =============================================================================
# Backend API server URL
API_URL=http://localhost:3001
API_BASE_URL=http://localhost:3001

# Next.js public API URL (for client-side requests)
NEXT_PUBLIC_API_URL=http://localhost:3001

# =============================================================================
# Database (Optional - if running migrations from web app)
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/jobswipe

# =============================================================================
# OAuth Providers (Optional)
# =============================================================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# =============================================================================
# Redis (Required for sessions and caching)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# Next.js Configuration
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# Feature Flags
# =============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SENTRY=false

# =============================================================================
# Security
# =============================================================================
# Session secret for cookie encryption
SESSION_SECRET=your-session-secret-change-this

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# Email Service (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =============================================================================
# Storage (Optional - for resume uploads)
# =============================================================================
# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=jobswipe-uploads

# =============================================================================
# Monitoring & Logging (Optional)
# =============================================================================
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# =============================================================================
# Notes:
# =============================================================================
# 1. NEVER commit this file with real values to version control
# 2. JWT_SECRET MUST match between web app and API server
# 3. Use .env.local for local development (git-ignored by default)
# 4. Use environment variables in production deployment platforms
