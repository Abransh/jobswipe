{
  "name": "@jobswipe/database",
  "version": "1.0.0",
  "description": "Database layer with Prisma ORM for JobSwipe",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && cp -r src/generated dist/generated",
    "dev": "tsc --watch",
    "clean": "rm -rf dist node_modules",
    "db:generate": "../../node_modules/.bin/prisma generate",
    "db:push": "../../node_modules/.bin/prisma db push",
    "db:pull": "../../node_modules/.bin/prisma db pull",
    "db:migrate": "../../node_modules/.bin/prisma migrate dev",
    "db:deploy": "../../node_modules/.bin/prisma migrate deploy",
    "db:reset": "../../node_modules/.bin/prisma migrate reset",
    "db:studio": "../../node_modules/.bin/prisma studio",
    "db:seed": "tsx seed/index.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "bcryptjs": "^2.4.3",
    "nanoid": "^5.0.4",
    "@jobswipe/shared": "workspace:*"
  },
  "devDependencies": {
    "prisma": "^5.7.0",
    "@types/bcryptjs": "^2.4.6",
    "tsx": "^4.6.2",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "prisma",
    "database",
    "postgresql",
    "orm"
  ]
}