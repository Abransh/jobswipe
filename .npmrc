# pnpm configuration for monorepo
# Ensures proper workspace handling during builds

# Use workspace protocol for local dependencies
link-workspace-packages=true

# Auto install peers to avoid missing peer dependency warnings
auto-install-peers=true

# Shamefully hoist to ensure all dependencies are accessible
# This is important for Vercel builds
shamefully-hoist=true

# Enable strict peer dependencies
strict-peer-dependencies=false

# Node linker setting for better compatibility
node-linker=hoisted

# Engine strict mode
engine-strict=false
