# pnpm configuration for monorepo
# Ensures proper workspace handling during builds

# Use workspace protocol for local dependencies
link-workspace-packages=true

# Auto install peers to avoid missing peer dependency warnings
auto-install-peers=true

# Shamefully hoist to ensure all dependencies are accessible
# This is CRITICAL for Vercel builds and monorepo dependency resolution
shamefully-hoist=true

# Public hoist pattern - hoist specific packages to root
# This ensures build tools can find them
public-hoist-pattern[]=*tailwindcss*
public-hoist-pattern[]=*postcss*
public-hoist-pattern[]=*autoprefixer*
public-hoist-pattern[]=*@prisma/client*
public-hoist-pattern[]=*prisma*
public-hoist-pattern[]=*


# Strict peer dependencies
strict-peer-dependencies=false

# Node linker setting for better compatibility
node-linker=hoisted

# Engine strict mode
engine-strict=false

# Side effects cache
side-effects-cache=true
